<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#0B2231"
    android:orientation="vertical">

    <Button
        android:id="@+id/onlineAllBtn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_above="@+id/offlineAllBtn"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:height="60dp"
        android:background="@drawable/button_layout"
        android:fontFamily="@font/roboto_medium"
        android:lineSpacingExtra="8sp"
        android:onClick="OnlineAll"
        android:outlineProvider="bounds"
        android:text="@string/btn_all_online"
        android:textColor="@color/colorWhite"
        android:textSize="24sp" />

    <Button
        android:id="@+id/offlineAllBtn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="99dp"
        android:height="60dp"
        android:background="@drawable/button_layout"
        android:fontFamily="@font/roboto_medium"
        android:lineSpacingExtra="8sp"
        android:onClick="OfflineAll"
        android:outlineProvider="bounds"
        android:text="@string/btn_all_offline"
        android:textColor="@color/colorWhite"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/boltLabel"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/uberDivider"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/button_layout"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center"
        android:lineSpacingExtra="8sp"
        android:text="BOLT"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textSize="24sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/freeNowLabel"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="123dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/button_layout"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center"
        android:lineSpacingExtra="8sp"
        android:text="FREENOW"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/uberLabel"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/freeNowDivider"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/button_layout"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center"
        android:lineSpacingExtra="8sp"
        android:text="UBER"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textSize="24sp" />

    <View
        android:id="@+id/boltDivider"
        android:layout_width="400dp"
        android:layout_height="0dp"
        android:layout_below="@+id/boltLabel"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="11dp"
        android:background="?android:attr/listDivider" />

    <View
        android:id="@+id/uberDivider"
        android:layout_width="400dp"
        android:layout_height="0dp"
        android:layout_below="@+id/uberLabel"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="11dp"
        android:background="?android:attr/listDivider" />

    <View
        android:id="@+id/freeNowDivider"
        android:layout_width="400dp"
        android:layout_height="0dp"
        android:layout_below="@+id/freeNowLabel"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="11dp"
        android:background="@color/colorWhite"
        android:backgroundTint="@color/colorWhite" />

    <!-- layout.xml -->
    <com.ismaeldivita.chipnavigation.ChipNavigationBar
        app:cnb_menuResource="@menu/bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_marginBottom="2dp"
        android:background="@drawable/bottomtab_layout" />

</RelativeLayout>
